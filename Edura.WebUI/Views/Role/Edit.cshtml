@model RoleDetails
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form asp-action="Edit" method="post">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">Add to @Model.Role.Name</h6>
            <div class="dropdown no-arrow">
                <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                </a>
            </div>
        </div>
        <div class="card-body">
            <input type="hidden" name="RoleId" value="@Model.Role.Id" />
            <input type="hidden" name="RoleName" value="@Model.Role.Name" />
            <table class="table  table-hover">
                @if (Model.NonMembers.Count() == 0)
                {
                    <tr>
                        <td colspan="2">All User Are Members</td>
                    </tr>
                }
                else
                {
                    @foreach (var item in Model.NonMembers)
                    {
                        <tr>
                            <td>@item.UserName</td>
                            <td><input type="checkbox" name="IdsToAdd" value="@item.Id" /></td>
                        </tr>
                    }
                }
            </table>
        </div>
        <card class="card-footer">
        </card>
    </div>
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">Delete to @Model.Role.Name</h6>
            <div class="dropdown no-arrow">
                <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                </a>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-border table-hover">
                @if (Model.Members.Count() == 0)
                {
                    <tr>
                        <td colspan="2">All User Are NonMembers</td>
                    </tr>
                }
                else
                {
                    @foreach (var item in Model.Members)
                    {
                        <tr>
                            <td>@item.UserName</td>
                            <td><input type="checkbox" name="IdsToDelete" value="@item.Id" /></td>
                        </tr>
                    }
                }
            </table>

        </div>
        <card class="card-footer">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="submit" class="btn btn-secondary">Cancel</button>
        </card>
    </div>
</form>


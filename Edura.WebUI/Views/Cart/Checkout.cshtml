@model  OrderDetails
@{
    ViewData["Title"] = "Checkout";
}

<!-- CONTENT START -->
<section id="content">

    <div class="container">

        <div class="row">

            <div class="col-md-8">
                <div class="padding25">
                    <h4>Enter Your <b>Information</b></h4>
                </div>
                <div class="text-danger" asp-validation-summary="ModelOnly">

                </div>
                <form asp-controller="Cart" asp-action="Checkout">
                    <div class="row">
                        <div class="form-group col-xs-12">
                            <input asp-for="AdresBasligi" class="form-control input-lg" placeholder="Adres Header">
                            <span class="text-danger" asp-validation-for="AdresBasligi"></span>
                        </div>

                        <div class="form-group col-xs-12">
                            <input asp-for="Adres" class="form-control" rows="11" placeholder="Adress" required />
                            <span class="text-danger" asp-validation-for="Adres"></span>
                        </div>
                        <div class="form-group col-xs-12">
                            <input asp-for="Sehir" class="form-control input-lg" placeholder="City">
                            <span class="text-danger" asp-validation-for="Sehir"></span>
                        </div>
                        <div class="form-group col-xs-12">
                            <input asp-for="Semt" class="form-control input-lg" placeholder="District">
                            <span class="text-danger" asp-validation-for="Semt"></span>
                        </div>
                        <div class="form-group col-xs-12">
                            <input asp-for="Telefon" class="form-control input-lg" placeholder="Phone">
                            <span class="text-danger" asp-validation-for="Telefon"></span>
                        </div>
                        <div class="form-group col-xs-12 text-left">
                            <button type="submit" class="btn btn-primary btn-lg"><i class="fa fa-send fa-fw"></i> Confirm Order</button>
                        </div>
                    </div>
                </form>

            </div>

            <div class="col-md-4">

                <div class="padding25">
                    <h4>HELLO <b>WORLD</b></h4>
                </div>
                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Curabitur eget leo at velit imperdiet varius. In eu ipsum vitae velit congue iaculis vitae at risus. Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>


                <div class="padding15">
                    <h4>OUR <b>OFFICE</b></h4>
                </div>
                <p><i class="fa fa-map-marker fa-fw"></i> 379 5th Ave, New York, 10001, USA</p>
                <p><i class="fa fa-phone fa-fw"></i> +(112) 345 6879</p>
                <p><i class="fa fa-phone fa-fw"></i> +(112) 345 6879</p>
                <p><i class="fa fa-envelope fa-fw"></i> hello@example.com</p>

                <div class="padding15">
                    <h4>BUSINESS <b>HOURS</b></h4>
                </div>
                <p><i class="fa fa-clock-o fa-fw"></i> Monday - Friday: 9am to 6pm</p>
                <p><i class="fa fa-clock-o fa-fw"></i> Saturday: 9am to 2pm</p>
                <p><i class="fa fa-times fa-fw"></i> Sunday: Closed</p>


            </div>

        </div>

    </div>



</section>
